{
  "name": "@universal-translation/web-sdk",
  "version": "1.0.0",
  "description": "Web SDK for Universal Translation System with on-device encoding using ONNX Runtime Web",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:wasm && rollup -c && npm run copy-wasm",
    "build:watch": "rollup -c -w",
    "build:wasm": "node scripts/build-wasm.js",
    "copy-wasm": "cp -r node_modules/onnxruntime-web/dist/*.wasm dist/wasm/ 2>/dev/null || true && cp -r public/wasm/*.wasm dist/wasm/ 2>/dev/null || true && cp -r public/wasm/*.js dist/wasm/ 2>/dev/null || true",
    "dev": "vite",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "prepare-assets": "npm run convert-vocab && npm run convert-model",
    "convert-vocab": "node scripts/convert-vocab.js",
    "convert-model": "node scripts/convert-model.js",
    "prepublishOnly": "npm run lint && npm run type-check && npm run build",
    "example": "vite serve example --port 3000"
  },
  "dependencies": {
    "onnxruntime-web": "~1.16.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msgpack-lite": "^0.1.26",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "rollup": "^4.9.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  }
}