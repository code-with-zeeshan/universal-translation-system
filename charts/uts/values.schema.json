{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "coordinator": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "repository": {"type": "string"},
            "tag": {"type": "string"},
            "pullPolicy": {"type": "string"}
          },
          "required": ["repository", "tag"]
        },
        "replicaCount": {"type": "integer", "minimum": 1},
        "service": {
          "type": "object",
          "properties": {
            "type": {"type": "string"},
            "port": {"type": "integer", "minimum": 1}
          },
          "required": ["type", "port"]
        }
      },
      "required": ["image", "replicaCount", "service"]
    },
    "decoder": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "repository": {"type": "string"},
            "tag": {"type": "string"},
            "pullPolicy": {"type": "string"}
          },
          "required": ["repository", "tag"]
        },
        "replicaCount": {"type": "integer", "minimum": 1},
        "service": {
          "type": "object",
          "properties": {
            "type": {"type": "string"},
            "port": {"type": "integer", "minimum": 1}
          },
          "required": ["type", "port"]
        }
      },
      "required": ["image", "replicaCount", "service"]
    }
  },
  "required": ["coordinator", "decoder"]
}